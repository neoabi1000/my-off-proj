<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.jsapl.model">

	<class name="Customer" table="CUSTOMER">
	
		<id name="custId" type="long">
			<column name="CUSTID" />
			<generator class="assigned" />
		</id>
		
		<property name="name" type="java.lang.String">
			<column name="NAME" />
		</property>
		
		<property name="phone" type="java.lang.String">
			<column name="PHONE" />
		</property>
		
		<property name="pan" type="java.lang.String">
			<column name="PAN" />
		</property>

		<many-to-one name="customerType" class="CustomerType" lazy="false">
			<column name="CUSTOMERTYPE" not-null="true" />
		</many-to-one>

		<set name="samples" inverse="false" fetch="select" table="SAMPLE" lazy="true">
			<key column="CUSTID"></key>
			<one-to-many class="Sample" />
		</set>

		<set name="contacts" table="CUSTOMER_CONTACT" cascade="save-update" lazy="false">
			<key column="custId"></key>
			<composite-element class="com.jsapl.model.CustomerContact">
				<property name="name"></property>
				<property name="email"></property>
				<property name="phone"></property>
			</composite-element>
		</set>
	</class>
	
</hibernate-mapping>
